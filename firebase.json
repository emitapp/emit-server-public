{
  "functions": {
    "predeploy": [
      "sh deploy-confirmation.sh",
      "sh update-environment.sh",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "database": {
    "predeploy": [
      "sh deploy-confirmation.sh"
    ],
    "rules": "database.rules.json"
  },
  "storage": {
    "predeploy": [
      "sh deploy-confirmation.sh"
    ],
    "rules": "storage.rules"
  },
  "firestore": {
    "predeploy": [
      "sh deploy-confirmation.sh"
    ],
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "hosting/build",
    "predeploy": [
      "sh deploy-confirmation.sh",
      "cd hosting && npm run build && cd .."
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
